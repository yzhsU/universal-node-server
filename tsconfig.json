{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "include": ["src/**/*.ts"]
}
